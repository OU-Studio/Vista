{% comment %}
Blog Section
- Displays all articles in the current blog
- Grid layout with featured image, title, date, author, excerpt
- Scheme aware for styling consistency
{% endcomment %}

<section class="blog color-scheme color-scheme-{{ settings.default_color_scheme }}">
  <div class="blog__inner">
    <h1 class="blog__title">{{ blog.title }}</h1>

    {% paginate blog.articles by 6 %}
      <div class="blog__grid">
        {% for article in blog.articles %}
          <article class="post">
            {% if article.image %}
              <a href="{{ article.url }}" class="post__media">
                {{ article.image | image_url: width: 1200 | image_tag: loading: 'lazy', alt: article.title }}
              </a>
            {% endif %}

            <div class="post__body">
              <h2 class="post__title"><a href="{{ article.url }}">{{ article.title }}</a></h2>
              <p class="post__meta">
                {{ article.published_at | date: "%B %e, %Y" }} by {{ article.author }}
              </p>
              {% if article.excerpt != blank %}
                <p class="post__excerpt">{{ article.excerpt | strip_html | truncate: 160 }}</p>
              {% endif %}
              <a href="{{ article.url }}" class="button button--secondary">Read more</a>
            </div>
          </article>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="blog__pagination">
          {{ paginate | default_pagination }}
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</section>

<style>
.blog {
  padding: 60px 20px;
}
.blog__inner {
  max-width: 1200px;
  margin: 0 auto;
  display: grid;
  gap: 2.5rem;
}
.blog__title {
  text-align: center;
  font-size: clamp(2rem, 4vw, 3rem);
  margin: 0;
}
.blog__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 2rem;
}
.post {
  display: grid;
  gap: 1rem;
}
.post__media img {
  border-radius: var(--radius, 6px);
  width: 100%;
  height: auto;
  display: block;
}
.post__title {
  margin: 0;
  font-size: 1.25rem;
}
.post__meta {
  font-size: 0.9rem;
  opacity: 0.7;
}
.post__excerpt {
  opacity: 0.85;
}
.blog__pagination {
  text-align: center;
}
</style>

{% schema %}
{
  "name": "Blog",
  "settings": []
}
{% endschema %}
