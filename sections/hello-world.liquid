{% comment %}
Section: Demo — Typography & UI
File: sections/hello-world.liquid
Purpose: Visual smoke test for fonts, colors, buttons, inputs.

Relies on:
- color-schemes.liquid emitting --color-* tokens
- base tokens for typography (var(--t-font-...))
- .button--primary / .button--secondary styles in your CSS
{% endcomment %}

<section id="section-{{ section.id }}" class="color-scheme color-scheme-{{ section.settings.color_scheme }}">
  <div class="demo container">
    <header class="demo__header">
      <h1 class="demo__title">{{ section.settings.title | escape }}</h1>
      {% if section.settings.show_intro %}
        <p class="demo__intro">{{ section.settings.intro | escape }}</p>
      {% endif %}
    </header>

    <div class="demo__grid">
      <!-- Typography -->
      <article class="demo__card">
        <h2>Headings</h2>
        <h1>H1 — The quick brown fox</h1>
        <h2>H2 — Jumps over the lazy dog</h2>
        <h3>H3 — Pack my box with five dozen liquor jugs</h3>
        <h4>H4 — Sphinx of black quartz, judge my vow</h4>
        <h5>H5 — How vexingly quick daft zebras jump</h5>
        <h6>H6 — Waltz, bad nymph, for quick jigs vex</h6>
      </article>

      <article class="demo__card">
        <h2>Body & Links</h2>
        <p>
          This is body copy. It uses <code>--t-body-size</code>, <code>--t-body-lh</code>,
          and <code>--t-body-tracking</code>. Try a <a href="#">regular link</a> and
          hover it to see <code>--link-hover</code>.
        </p>
        <p>
          <strong>Strong text</strong> and <em>emphasis</em> should be readable against
          <code>--color-background</code>. Muted text uses
          <span class="demo__muted">--color-foreground-secondary</span>.
        </p>
        <ul>
          <li>Unordered list item</li>
          <li>Another item</li>
          <li>And one more</li>
        </ul>
        <ol>
          <li>Ordered list item</li>
          <li>Another item</li>
        </ol>
        <blockquote>
          “Good design is as little design as possible.” — Dieter Rams
        </blockquote>
        <pre><code>.selector { color: var(--color-foreground); }</code></pre>
      </article>

      <!-- Buttons -->
      <article class="demo__card">
       <button class="button" data-anim="fade-up" data-anim-once="true">Animate me</button>

        <h2>Buttons</h2>
        <div class="demo__row">
          <a href="#" class="button button--primary" data-anim="fade-up">Primary button</a>
          <a href="#" class="button button--secondary" data-anim="fade-up">Secondary button</a>
          <a href="#" class="button button--ghost" data-anim="fade-up">Ghost button</a>
        </div>
        <div class="demo__row">
          <button class="button button--primary" disabled>Primary (disabled)</button>
          <button class="button button--secondary" disabled>Secondary (disabled)</button>
        </div>
      </article>

      <!-- Inputs -->
      <article class="demo__card">
        <h2>Inputs</h2>
        <form class="demo__form" onsubmit="return false">
          <label class="demo__label">Text input
            <input class="input" type="text" placeholder="Placeholder text">
          </label>

          <label class="demo__label">Email
            <input class="input" type="email" placeholder="you@example.com">
          </label>

          <label class="demo__label">Select
            <select class="input">
              <option>Option one</option>
              <option>Option two</option>
            </select>
          </label>

          <label class="demo__label">Textarea
            <textarea class="input" rows="3" placeholder="Say hello…"></textarea>
          </label>

          <div class="demo__row">
            <button class="button button--primary" type="submit">Submit</button>
            <button class="button button--secondary" type="button">Cancel</button>
          </div>
        </form>
      </article>
    </div>
  </div>

  {% style %}
    #section-{{ section.id }} .container {
      max-width: var(--container-max);
      margin: 0 auto;
      padding: calc(var(--gutter) * 2) var(--gutter);
    }
    #section-{{ section.id }} .demo__header { margin-bottom: calc(var(--gutter) * 1.5); }
    #section-{{ section.id }} .demo__title { margin: 0 0 .5rem 0; }
    #section-{{ section.id }} .demo__intro { color: var(--color-foreground-secondary); margin: 0; }

    #section-{{ section.id }} .demo__grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: calc(var(--gutter) * 1.25);
    }
    @media (min-width: 900px) {
      #section-{{ section.id }} .demo__grid {
        grid-template-columns: repeat(2, minmax(0,1fr));
      }
    }

    #section-{{ section.id }} .demo__card {
      background: var(--color-surface, color-mix(in srgb, var(--color-background) 96%, var(--color-foreground) 4%));
      color: var(--color-foreground);
      border: 1px solid var(--color-border, color-mix(in srgb, var(--color-foreground) 12%, transparent));
      border-radius: var(--radius);
      box-shadow: var(--elevation-0);
      padding: calc(var(--gutter) * 1.25);
    }
    #section-{{ section.id }} .demo__card h2 { margin-top: 0; }

    #section-{{ section.id }} .demo__muted { color: var(--color-foreground-secondary); }
    #section-{{ section.id }} .demo__row { display: flex; gap: .75rem; flex-wrap: wrap; align-items: center; }

    /* Inputs (use your derived tokens) */
    #section-{{ section.id }} .input {
      appearance: none;
      width: 100%;
      background: var(--input-bg, color-mix(in srgb, var(--color-background) 98%, var(--color-foreground) 2%));
      color: var(--input-fg, var(--color-foreground));
      border: 1px solid var(--input-border, color-mix(in srgb, var(--color-foreground) 12%, transparent));
      border-radius: var(--radius);
      padding: .65rem .85rem;
      line-height: 1.2;
    }
    #section-{{ section.id }} .input::placeholder { color: var(--input-ph, color-mix(in srgb, var(--color-foreground) 60%, transparent)); }
    #section-{{ section.id }} .input:focus { outline: 2px solid var(--focus-ring, var(--color-accent)); outline-offset: 2px; }

    #section-{{ section.id }} .demo__label { display: grid; gap: .35rem; margin-bottom: .85rem; }
    #section-{{ section.id }} blockquote {
      margin: 1rem 0; padding: .75rem 1rem;
      border-inline-start: 4px solid var(--color-accent);
      background: color-mix(in srgb, var(--color-accent) 8%, var(--color-background) 92%);
    }
    #section-{{ section.id }} pre {
      margin: 1rem 0; padding: .75rem 1rem;
      background: var(--surface-100, color-mix(in srgb, var(--color-background) 96%, var(--color-foreground) 4%));
      border-radius: var(--radius);
      overflow: auto;
    }
    #section-{{ section.id }} code { font-family: var(--t-font-misc); }
  {% endstyle %}
</section>

{% schema %}
{
  "name": "Demo: Typography & UI",
  "tag": "section",
  "class": "section--hello-world",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Hello, Vista" },
    { "type": "textarea", "id": "intro", "label": "Intro text", "default": "A quick visual check for typography, colors, buttons, and inputs." },
    { "type": "checkbox", "id": "show_intro", "label": "Show intro", "default": true },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color scheme", "default": "scheme-1" }
  ],
  "presets": [
    { "name": "Demo: Typography & UI" }
  ]
}
{% endschema %}
