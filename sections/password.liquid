{% comment %}
Password Page
- Centered, scheme-aware password form
- Uses base button + global color scheme
- Shows optional shop password message
{% endcomment %}

<section class="password color-scheme color-scheme-{{ settings.default_color_scheme }}">
  <div class="password__inner">
    <h1 class="password__title">Storefront locked</h1>

    {% if shop.password_message %}
      <p class="password__message">{{ shop.password_message }}</p>
    {% else %}
      <p class="password__message">Enter the password to access this store.</p>
    {% endif %}

    {% form 'storefront_password' %}
      {% if form.errors %}
        <div class="password__errors">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <label class="password__label" for="password-input">Password</label>
      <input
        type="password"
        name="password"
        id="password-input"
        class="password__input"
        placeholder="Enter password"
      >

      <button type="submit" class="button button--primary">
        Enter
      </button>
    {% endform %}
  </div>
</section>

<style>
.password {
  display: grid;
  place-items: center;
  min-height: 100vh;
  padding: 40px 20px;
  text-align: center;
}
.password__inner {
  max-width: 400px;
  width: 100%;
  display: grid;
  gap: 1.25rem;
}
.password__title {
  font-size: clamp(1.8rem, 4vw, 2.5rem);
  margin: 0;
}
.password__message {
  opacity: .75;
}
.password__label {
  display: block;
  margin-bottom: .5rem;
  font-size: .9rem;
  text-align: left;
}
.password__input {
  width: 100%;
  padding: .65em 1em;
  border: 1px solid rgba(0,0,0,.15);
  border-radius: var(--radius, 4px);
  font-size: 1rem;
}
.password__errors {
  color: var(--color-error, #b00);
  font-size: .9rem;
}
</style>

{% schema %}
{
  "name": "Password page",
  "settings": []
}
{% endschema %}
