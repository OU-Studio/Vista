[
  {
    "name": "theme_info",
    "theme_name": "Vista",
    "theme_version": "0.1.0",
    "theme_author": "Onwards + Upwards",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Design system",
    "settings": [      

      { "type": "header", "content": "Layout & spacing" },
      { "type": "range", "id": "site_max", "label": "Site max width", "min": 900, "max": 1600, "step": 20, "unit": "px", "default": 1200 },
      { "type": "range", "id": "gutter", "label": "Gutter (grid gap)", "min": 4, "max": 40, "step": 2, "unit": "px", "default": 20 },

      { "type": "header", "content": "Shape & elevation" },
      { "type": "range", "id": "radius", "label": "Corner radius", "min": 0, "max": 24, "step": 2, "unit": "px", "default": 8 },
      { "type": "range", "id": "shadow_depth", "label": "Shadow depth", "min": 0, "max": 5, "step": 1, "default": 1 },

      { "type": "header", "content": "Icons & motion" },
      { "type": "select", "id": "icon_pack", "label": "Icon pack", "options": [
        { "value": "outline", "label": "Outline" },
        { "value": "rounded", "label": "Rounded" },
        { "value": "duotone", "label": "Duotone" }
      ], "default": "outline" },
      { "type": "range", "id": "icon_stroke", "label": "Icon stroke width", "min": 1, "max": 5, "step": 1, "default": 2 },
      { "type": "range", "id": "motion_speed", "label": "Animation speed", "min": 75, "max": 150, "step": 5, "unit": "%", "default": 100 }
    ]
  },
  {
  "name": "Colours",
  "settings": [
    {
      "type": "color_scheme_group",
      "id": "color_schemes",
      "definition": [
        { "type": "color", "id": "background_color",        "label": "Background",              "default": "#ffffff" },
        { "type": "color", "id": "header_background_color", "label": "Header background",       "default": "#ffffff" },

        { "type": "color", "id": "text_color",              "label": "Text",                    "default": "#111111" },
        { "type": "color", "id": "text_muted_color",        "label": "Muted text",              "default": "#6b7280" },

        { "type": "color", "id": "brand_primary_color",     "label": "Primary brand color",     "default": "#1f6feb" },
        { "type": "color", "id": "brand_secondary_color",   "label": "Secondary brand color",   "default": "#ef4444" },

        { "type": "color", "id": "button_primary_bg",       "label": "Primary button",          "default": "#1f6feb" },
        { "type": "color", "id": "button_primary_text",     "label": "Primary button text",     "default": "#ffffff" },

        { "type": "color", "id": "button_secondary_bg",     "label": "Secondary button",        "default": "#f3f4f6" },
        { "type": "color", "id": "button_secondary_text",   "label": "Secondary button text",   "default": "#111111" },

        { "type": "color", "id": "surface_bg",              "label": "Surface / Card background","default": "#f9fafb" },
        { "type": "color", "id": "border_color",            "label": "Borders / Dividers",      "default": "#e5e7eb" }
      ],
      "role": {
        "background": "background_color",
        "text": "text_color",
        "links": "brand_primary_color",
        "icons": "text_color",

        "primary_button": "button_primary_bg",
        "on_primary_button": "button_primary_text",
        "primary_button_border": "button_primary_bg",

        "secondary_button": "button_secondary_bg",
        "on_secondary_button": "button_secondary_text",
        "secondary_button_border": "border_color"
      }
    },
    {
      "type": "color_scheme",
      "id": "default_color_scheme",
      "label": "Default color scheme (sitewide)",
      "default": "scheme-1"
    }
  ]
},
 {
  "name": "Typography",
  "settings": [
    { "type": "font_picker", "id": "font_heading", "label": "Heading font", "default": "work_sans_n7" },
    { "type": "font_picker", "id": "font_body", "label": "Body font", "default": "work_sans_n4" },
    { "type": "font_picker", "id": "font_misc", "label": "Miscellaneous font", "default": "work_sans_n2" },
    { "type": "range", "id": "body_font_size", "label": "Body font size", "min": 10, "max": 40, "step": 1, "unit": "px", "default": 16 },
    { "type": "range", "id": "body_line_height", "label": "Body line height", "min": 0.6, "max": 3, "step": 0.1, "unit": "em", "default": 1.2 },

    {
      "type": "select",
      "id": "body_letter_spacing",
      "label": "Body letter spacing",
      "options": [
      { "value": "-0.05", "label": "Tight (-0.05em)" },
      { "value": "0", "label": "Normal (0em)" },
      { "value": "0.05", "label": "Slightly open (0.05em)" },
      { "value": "0.1", "label": "Open (0.1em)" },
      { "value": "0.15", "label": "Wide (0.15em)" },
      { "value": "0.2", "label": "Extra wide (0.2em)" }
    ],
      "default": "0.1"
    },

    { "type": "select", "id": "header-scaling", "label": "Header Scaling", "options": [
      { "value": "minor_second", "label": "Minor Second" },
      { "value": "major_second", "label": "Major Second" },
      { "value": "minor_third", "label": "Minor Third" },
      { "value": "major_third", "label": "Major Third" },
      { "value": "perfect_forth", "label": "Perfect Forth" },
      { "value": "augmented_forth", "label": "Augmented Forth" },
      { "value": "perfect_fifth", "label": "Perfect Fifth" },
      { "value": "golden_ratio", "label": "Golden Ratio" }
    ], "default": "perfect_forth" },
    { "type": "range", "id": "header_line_height", "label": "Header line height", "min": 0.6, "max": 3, "step": 0.1, "unit": "em", "default": 1.2 },

    {
      "type": "select",
      "id": "header_letter_spacing",
      "label": "Header letter spacing",
      "options": [
      { "value": "-0.05", "label": "Tight (-0.05em)" },
      { "value": "0", "label": "Normal (0em)" },
      { "value": "0.05", "label": "Slightly open (0.05em)" },
      { "value": "0.1", "label": "Open (0.1em)" },
      { "value": "0.15", "label": "Wide (0.15em)" },
      { "value": "0.2", "label": "Extra wide (0.2em)" }
    ],
      "default": "0" 
    }
  ]
 },
  {
    "name": "Cart",
    "settings": [
      { "type": "select", "id": "cart_type", "label": "Cart type", "options": [
        { "value": "drawer", "label": "Drawer" },
        { "value": "page", "label": "Page" }
      ], "default": "drawer" }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      { "type": "select", "id": "btn_shape", "label": "Shape", "options": [
        { "value": "soft", "label": "Soft (radius)" },
        { "value": "pill", "label": "Pill" },
        { "value": "square", "label": "Square" }
      ], "default": "soft" },
      { "type": "select", "id": "btn_weight", "label": "Weight", "options": [
        { "value": "solid", "label": "Solid" },
        { "value": "outline", "label": "Outline" },
        { "value": "ghost", "label": "Ghost" }
      ], "default": "solid" },
      { "type": "checkbox", "id": "btn_uppercase", "label": "Uppercase labels", "default": false }
    ]
  },
  {
    "name": "Cards",
    "settings": [
      { "type": "range", "id": "card_radius", "label": "Card radius", "min": 0, "max": 24, "step": 2, "unit": "px", "default": 8 },
      { "type": "range", "id": "card_shadow", "label": "Card shadow depth", "min": 0, "max": 3, "step": 1, "default": 1 },
      { "type": "range", "id": "card_padding_y", "label": "Card vertical padding", "min": 8, "max": 32, "step": 2, "unit": "px", "default": 16 },
      { "type": "range", "id": "card_padding_x", "label": "Card horizontal padding", "min": 8, "max": 32, "step": 2, "unit": "px", "default": 16 }
    ]
  },
  {
    "name": "Images & media",
    "settings": [
      { "type": "select", "id": "image_ratio_default", "label": "Default image ratio", "options": [
        { "value": "auto", "label": "Auto" },
        { "value": "1-1", "label": "Square (1:1)" },
        { "value": "4-5", "label": "Portrait (4:5)" },
        { "value": "3-2", "label": "Landscape (3:2)" }
      ], "default": "auto" },
      { "type": "checkbox", "id": "image_soft_corners", "label": "Soft corners on images", "default": false },
      { "type": "checkbox", "id": "image_lazy", "label": "Lazy-load images", "default": true }
    ]
  },
  {
    "name": "Product defaults",
    "settings": [
      { "type": "checkbox", "id": "show_quick_add", "label": "Show quick add", "default": true },
      { "type": "checkbox", "id": "show_second_image_on_hover", "label": "Show second image on hover", "default": true },
      { "type": "checkbox", "id": "show_price_compare", "label": "Show compare-at price", "default": true },
      { "type": "checkbox", "id": "show_badges", "label": "Show badges (Sale/New)", "default": true },
      { "type": "range", "id": "grid_columns_desktop", "label": "Collection grid columns (desktop)", "min": 2, "max": 5, "step": 1, "default": 4 }
    ]
  },
  {
    "name": "Search & quick view",
    "settings": [
      { "type": "checkbox", "id": "enable_predictive_search", "label": "Enable predictive search", "default": true },
      { "type": "checkbox", "id": "enable_quick_view", "label": "Enable quick view", "default": false }
    ]
  },
  {
    "name": "Accessibility & UX",
    "settings": [
      { "type": "checkbox", "id": "focus_outline_always", "label": "Always show focus outlines", "default": true },
      { "type": "checkbox", "id": "respect_reduced_motion", "label": "Respect 'Reduce motion' setting", "default": true },
      { "type": "checkbox", "id": "enable_skip_links", "label": "Enable skip links", "default": true }
    ]
  },
  {
    "name": "Social & sharing",
    "settings": [
      { "type": "text", "id": "social_instagram", "label": "Instagram URL" },
      { "type": "text", "id": "social_tiktok", "label": "TikTok URL" },
      { "type": "text", "id": "social_youtube", "label": "YouTube URL" },
      { "type": "image_picker", "id": "default_og_image", "label": "Default social share image" }
    ]
  }
]
